{
    "name": "springernature/behat-zf-extension",
    "description": "Extension to integrate Zend Framework to Behat",
    "type": "extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Lechevalier",
            "email": "o.lechevalier@nature.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "behat/behat": "~3.0,>=3.0.4",
        "zendframework/zend-servicemanager": "^2 || ^3",
        "zendframework/zend-mvc": "^2 || ^3",
        "symfony/http-foundation": "^3.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "behat/mink-extension": "~2.0",
        "behat/mink-browserkit-driver": "~1.0",
        "symfony/symfony": "~2.1|~3.0",
        "zendframework/zend-router": "^3.0",
        "zendframework/zend-console": "^2.0"
    },

    "autoload": {
        "psr-4": { "SpringerNature\\Behat\\ZFExtension\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Application\\": "testapp/module/Application/src/"
        }
    },
    "scripts": {
        "test": "phpspec run --format dot"
    }
}
